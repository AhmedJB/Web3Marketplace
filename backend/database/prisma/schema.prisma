// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// models starts here
// npx prisma migrate dev --name customNameOrSmallDescription

model TestModel {
  id      Int      @id @default(autoincrement())
  name    String
  surname String
  date    DateTime @default(now())
}

model UserModel {
  id        Int       @id @default(autoincrement())
  //signature ?
  address   String    @unique @default("")
  firstName String    @default("")
  lastName  String    @default("")
  country   String?   @default("")
  city      String?   @default("")
  // relations
  products  Product[]
}

model Product {
  id                  Int             @id @default(autoincrement())
  title               String
  description         String
  tags                String
  shippingCost        Float
  shippingFrom        String
  minimumDeliveryTime Int
  maximumDeliveryTime Int
  isAuction           Boolean         @default(false)
  Price               Decimal
  quantity            Int
  created             DateTime        @default(now())
  // relations
  images              ProductImages[]
  user                UserModel       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId              Int
  category            Category        @relation(fields: [catgId], references: [id], onDelete: Cascade)
  catgId              Int
}

model ProductImages {
  id           Int      @id @default(autoincrement())
  filename     String
  physicalPath String
  fileUrl      String
  created      DateTime @default(now())
  // relations
  product      Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId    Int
}

model Category {
  id       Int       @id @default(autoincrement())
  title    String    @unique
  imageUrl String
  // relations
  products Product[]
}
